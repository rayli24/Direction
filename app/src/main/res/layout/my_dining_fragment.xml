<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.MyDiningFragment">

    <RelativeLayout
        android:id="@+id/my_dining_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        tools:ignore="MissingConstraints"
        android:background="@drawable/gradient_purple"
        android:elevation="@dimen/bar_elevation">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="My Dining List"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view_my_dining"
        android:layout_below="@+id/my_dining_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/my_store_recycle_view"/>

    <RelativeLayout
        android:id="@+id/my_layout_dining_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/my_img_add_dining_empty_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/ic_add_circle_grey_24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/add_stores"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_below="@+id/my_img_add_dining_empty_view"
            android:textColor="@color/light_text"
            android:gravity="center" />
    </RelativeLayout>


</LinearLayout>