<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recycle_view_gradient_border"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <TextView
            android:id="@+id/txt_amount_create_recycle_view"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginLeft="12dp"
            android:gravity="center|left"
            android:text="2"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <TextView
            android:id="@+id/txt_item_create_recycle_view"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Bread"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_toRightOf="@+id/txt_amount_create_recycle_view"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <CheckBox
            android:id="@+id/chk_done_create_recycle_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/img_edit_create_note_recycle_view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_mode_edit_black_24dp"
            android:layout_toLeftOf="@+id/chk_done_create_recycle_view"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="edit"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_toLeftOf="@id/img_edit_create_note_recycle_view"
            android:layout_marginRight="6dp"
            android:layout_centerVertical="true"/>






    </RelativeLayout>

</LinearLayout>