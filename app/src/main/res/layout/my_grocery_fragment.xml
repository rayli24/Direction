<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyGroceryFragment">

    <RelativeLayout
        android:id="@+id/myGroceryBarLayout"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:background="@drawable/gradient_purple">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="My Grocery List"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view_my_grocery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/myGroceryBarLayout"
        tools:listitem="@layout/my_store_recycle_view"/>


</RelativeLayout>