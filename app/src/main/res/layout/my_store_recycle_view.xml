<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginStart="12dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/layout_background_my_store_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_delete_my_store_recycle_view"
            android:layout_width="@dimen/img_delete"
            android:layout_height="@dimen/img_delete"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_delete_red_24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/img_delete_my_store_recycle_view"
            android:text="@string/delete"
            android:textColor="@color/red"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_foreground_my_store_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/recycle_view_gradient_border"
        android:padding="6dp">

        <ImageView
            android:id="@+id/img_my_logo_recycle_view"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/mcdonald"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/txt_my_name_recycle_view"
            android:layout_width="174dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img_my_logo_recycle_view"
            android:layout_marginStart="10dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="@integer/repeat_num"
            android:text="Atlantic superstore today"
            android:gravity="center"
            android:scrollHorizontally="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />



        <ImageView
            android:id="@+id/img_my_location_recycle_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location_24dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/img_my_car_recycle_view"/>
        
<!--        <TextView-->
<!--            android:id="@+id/txt_my_time_recycle_view"-->
<!--            android:layout_width="60dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:gravity="left"-->
<!--            android:text="120 min"-->
<!--            android:textSize="14sp"-->
<!--            android:textColor="@color/greenTime"-->
<!--            android:layout_toRightOf="@+id/img_my_location_recycle_view"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:visibility="gone"-->
<!--            android:layout_marginStart="6dp"/>-->

        <ImageView
            android:id="@+id/img_my_car_recycle_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_directions_car_24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"/>
<!--            android:layout_toRightOf="@+id/txt_my_time_recycle_view"-->

    </RelativeLayout>

</androidx.cardview.widget.CardView>